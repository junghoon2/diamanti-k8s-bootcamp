apiVersion: apps/v1
kind: Deployment
metadata:
  name: gitlab
  namespace: gitlab
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gitlab
  template:
    metadata:
      labels:
        app: gitlab
      annotations:    # You must add these two lines under spec-> template -> metadata
        diamanti.com/endpoint0: '{"network":"blue","perfTier":"high"}'
    spec:
      containers:
      - name: gitlab
        image: gitlab/gitlab-ee:latest
        ports:
        - containerPort: 80
          name: web
        - containerPort: 443
          name: tls
        - containerPort: 22
          name: ssh
        resources:
          requests:
            cpu: "1"
            memory: 16Gi
          limits:
            cpu: "4"
            memory: 64Gi  # 많은 resource 필요
        readinessProbe:
          failureThreshold: 3
          httpGet:
            path: /-/readiness
            port: 80
            scheme: HTTP
          periodSeconds: 10
          successThreshold: 1
          timeoutSeconds: 2
        livenessProbe:
          failureThreshold: 3
          httpGet:
            path: /-/liveness
            port: 80
            scheme: HTTP
          initialDelaySeconds: 20
          periodSeconds: 60
          successThreshold: 1
          timeoutSeconds: 30
      #   volumeMounts:  # Volume을 POD에 어디에 마운트 할 것인지
      #   - name: gitlab-vol  # Volume 이름
      #     mountPath: /var/opt/gitlab  # Mount 이름 
      # volumes:  # 어떤 Volume을 사용할 것인지
