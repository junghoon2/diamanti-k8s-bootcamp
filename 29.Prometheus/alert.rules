groups:
- name: volume_space
  rules:
  - alert: VolumeOutOfSpace
    expr: collectd_df_df_complex{df=~"nvme4n1",exported_instance="adzdia03",type="free"}/(1024*1024*1024) < 300
    for: 1m
    labels:
      severity: warning
    annotations:
      summary: Volume {{ $labels.df }} {{ $labels.source }} is out of space  # 정보 입력 가능
      description: Check the dctl volume list for finding pod name
- name: NodeDown
  rules:
  - alert: nodedown
    expr: up{job="node-exporter"} == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Instance {{ $labels.instance }} down"
      description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 30 s"
