groups:
- name: volume_space
  rules:
  - alert: VolumeOutOfSpace
    expr: collectd_df_df_complex{df=~"nvme.*",type="free"}/(1024*1024*1024) < 300
    for: 1m
    labels:
      severity: warning
    annotations:
      summary: Volume {{ $labels.df }} {{ $labels.source }} is out of space  # 정보 입력 가능
      description: "MariaDB Instance Volume 용량이 50G 미만 입니다. 해당 POD 이름은 Volume 정보 기준(dctl volume list|grep )으로 수동 검색해 주십시요."
- name: MariaDBDown
  rules:
  - alert: DB Instance Down
    expr: mysql_up == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "MariaDB {{ $labels.source }} of {{ $labels.group }} down"
      description: "{{ $labels.source }} of {{ $labels.group }} MariaDB has been down for more than 30s"
- name: NodeDown
  rules:
  - alert: nodedown
    expr: up{job="node-exporter"} == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Instance {{ $labels.instance }} down"
      description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 30 s"